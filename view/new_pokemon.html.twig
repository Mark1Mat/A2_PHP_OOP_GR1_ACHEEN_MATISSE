{% extends ('base.html.twig') %}

{% block content %}

    <div class="container">
        <div class="container">
            <div class="jumbotron">
                <h2 class="text-center">Create your Pokemon</h2>
                <p class="text-center">Please, choose a name and the type of your Pokemon and click on "Submit"</p>
                <form method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Enter your Pokemon name">
                    </div>
                    <select name="pokemonType" class="form-control">
                        <option value="0">Fire</option>
                        <option value="1">Water</option>
                        <option value="2">Plant</option>
                    </select>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
